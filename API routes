const express = require('express');
const router = express.Router();
const contactController = require('../controllers/contactController');

// CRUD Routes

// â• Create new contact
router.post('/', contactController.createContact);

// ğŸ“„ Get all contacts (with pagination & search)
router.get('/', contactController.getContacts);

// ğŸ” Get single contact by ID
router.get('/:id', contactController.getContactById);

// âœï¸ Update a contact
router.put('/:id', contactController.updateContact);

// ğŸ—‘ï¸ Delete single contact
router.delete('/:id', contactController.deleteContact);

// ğŸ—‘ï¸ Bulk delete contacts (optional)
router.delete('/', contactController.deleteManyContacts);

module.exports = router;
